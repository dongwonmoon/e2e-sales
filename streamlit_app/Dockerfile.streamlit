FROM python:3.12-slim

WORKDIR /app

# 필요한 라이브러리 설치
RUN pip install --no-cache-dir streamlit \
    pandas \
    psycopg2-binary \
    mlflow-skinny \
    requests \
    plotly \
    pendulum

# 애플리케이션 코드 복사
COPY ./streamlit_app/app.py /app/app.py

EXPOSE 8501

# Streamlit 앱 실행 명령어
CMD ["streamlit", "run", "app.py"]